# ubuntu disk mount 
sudo fdisk -l  #잘설치되었나 확인 sda sdb... 

# > 2TB 
sudo parted /dev/sdc
mklabel 
gpt 
yes
unit GB 
print 
mkpart primary 0GB 3000GB 
q

# <2TB 
sudo fdisk /dev/sdc
n p 1 enter enter p w 

mkfs.ext4 /dev/sdc1
sudo blkid #UUID copy 
sudo mkdir /proj2 
sudo vim /etc/fstab
UUID=583eb4bb-6f91-4634-b6f3-088157ae2010 /home/eunji/proj2 ext4 defaults 0 0
wq
sudo mount -a 
df -h
sudo ln -s /proj2 /home/eunji/proj2  
sudo chmod 777 proj2

#top command 
S -- Process Status
    The status of the task which can be one of:
      'D' = uninterruptible sleep
      'R' = running
      'S' = sleeping
      'T' = traced or stopped
      'Z' = zombie
